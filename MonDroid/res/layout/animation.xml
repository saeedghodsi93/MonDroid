<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:gravity="center_horizontal" >

    <ImageView
        android:id="@+id/tween_image_view"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/tween_image_view"
        android:src="@drawable/abc_ab_share_pack_holo_light" />

    <ImageView
        android:id="@+id/drawable_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/drawable_image_view"
        android:src="@drawable/abc_ab_share_pack_holo_light" />

</RelativeLayout>